@model Damacana.Models.Product

<h2>Add New Weapon</h2>

@using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputId1">Weapon ID</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Weapon Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputPrice1">Price</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputFoto1">Foto URL</label>
        @Html.TextBoxFor(x => x.Foto, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-warning">Add</button>
}

